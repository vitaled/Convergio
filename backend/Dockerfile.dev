# ğŸ› ï¸ Convergio Backend - Development Dockerfile
FROM python:3.11-slim

# ğŸ”§ Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    DEBIAN_FRONTEND=noninteractive

# ğŸ“¦ Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ“¦ Copy requirements first (for better caching)
COPY requirements.txt .

# ğŸ”§ Install Python dependencies + development tools
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pytest pytest-cov pytest-asyncio black isort flake8

# ğŸ“ Copy application code
COPY . .

# ğŸš€ Expose port
EXPOSE 9000

# ğŸ¯ Development command with hot reload
CMD ["python", "-m", "uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "9000", "--reload", "--log-level", "debug"]