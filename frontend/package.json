{
  "name": "platform-convergio-io-frontend",
  "version": "2030.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite dev --port 4000",
    "preview": "vite preview --port 4000",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "build:analyze": "vite build --mode analyze",
    "security:scan": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@storybook/addon-essentials": "9.0.0-alpha.12",
    "@storybook/svelte": "^9.0.18",
    "@storybook/sveltekit": "^9.0.18",
    "@sveltejs/adapter-node": "^5.2.13",
    "@sveltejs/kit": "^2.26.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/svelte": "^5.2.8",
    "@types/eslint": "^8.56.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-svelte": "^2.46.1",
    "happy-dom": "^18.0.1",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "storybook": "^9.0.18",
    "svelte": "^5.37.1",
    "svelte-check": "^3.8.6",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "autoprefixer": "^10.4.21",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Roberdan/Convergio.git"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "typescript",
    "frontend",
    "ai",
    "agents",
    "convergio"
  ],
  "author": "Convergio Team",
  "license": "SEE LICENSE IN ../LICENSE"
}
